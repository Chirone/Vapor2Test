<!DOCTYPE html>
<html lang="en">
	
	<head>
		<style>
            .column
            {
                display: inline-block;
                vertical-align: top;
                font-family: arial
            }
        </style>
		<title></title>
	</head>
	<body>
		
		Add input
		
		<script language="Javascript" type="text/javascript">
			var counter = 1;
			
            function newInputCell(fieldName, array) {
                var newdiv = document.createElement('div');
                newdiv.className = "dynamicInput";
                newdiv.innerHTML = fieldName + "<br><input type='text' name='" + array + "[]'>";
                
                return newdiv
            }
			function addInput(divLeft, divRight) {
				var leftDiv = newInputCell("Variable Name", "variable_names")
                var rightDiv = newInputCell("JSON Key", "json_keys")
				document.getElementById(divLeft).appendChild(leftDiv);
                document.getElementById(divRight).appendChild(rightDiv);
				counter++;
			}
		</script>
		
		<form action="/model/create" method="post">
			<div id="dynamicInput" class="column">
                <div class="column" id="divLeft">
					
                </div>
                <div class="column" id="divRight">
					
                </div>
			</div>
            <br>
            <br>
            <input type="button" value="Add another variable" onClick="addInput('divLeft', 'divRight');">
			<br>
			<br>
			<input type="submit" value="Submit">
		</form>
		
		
		
	</body>
</html>
